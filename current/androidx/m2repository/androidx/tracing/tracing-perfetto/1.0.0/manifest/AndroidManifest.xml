--><manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" package="androidx.tracing.perfetto">

    <uses-sdk android:minSdkVersion="21"/>

    <application>
        <receiver android:directBootAware="false" android:enabled="true" android:exported="true" android:name="androidx.tracing.perfetto.TracingReceiver" android:permission="android.permission.DUMP">

            <!-- Note: DUMP above highly limits who can call the receiver; Shell has DUMP perm. -->
            <intent-filter>
                <action android:name="androidx.tracing.perfetto.action.ENABLE_TRACING"/>
                <action android:name="androidx.tracing.perfetto.action.ENABLE_TRACING_COLD_START"/>
                <action android:name="androidx.tracing.perfetto.action.DISABLE_TRACING_COLD_START"/>
            </intent-filter>
        </receiver>

        <provider android:authorities="${applicationId}.androidx-startup" android:exported="false" android:name="androidx.startup.InitializationProvider" tools:node="merge">
            <meta-data android:name="androidx.tracing.perfetto.StartupTracingInitializer" android:value="androidx.startup" tools:node="remove"/>
        </provider>

        <receiver android:directBootAware="false" android:enabled="false" android:exported="false" android:name="androidx.tracing.perfetto.StartupTracingConfigStoreIsEnabledGate" tools:targetApi="n">
        </receiver>
    </application>

</manifest>